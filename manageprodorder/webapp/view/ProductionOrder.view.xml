<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.ProductionOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <Page id="prodOrderPage" title="{i18n>prodOrderPageTitle}" showNavButton="true" navButtonPress="onNavBack">
        <VBox id="prodOrderVBox" class="sapUiSmallMargin">
            <HBox id="prodOrderButtonsBar" class="sapUiSmallMarginBottom">
                <Button id="btnInlineContinue" text="{i18n>continue}" type="Emphasized" press="onContinue"/>
                <Button id="btnInlineClear" text="{i18n>clear}" class="sapUiSmallMarginBegin" press="onInlineClear"/>
            </HBox>
            <Panel id="prodOrderPanel" headerText="{i18n>prodOrderPanelHeader}" expandable="false" class="sapUiResponsiveMargin" width="auto">
                <VBox id="inlineCreateBox" class="sapUiSmallMarginBottom">
                    <Label id="lblInlineMaterial" text="{i18n>material}" labelFor="inpInlineMaterial"/>
                    <Input id="inpInlineMaterial" value="{view>/newEntry/Material}" width="200px"/>
                    <Label id="lblInlineProdOrder" text="{i18n>productionOrder}" labelFor="inpInlineProdOrder"/>
                    <Input id="inpInlineProdOrder" value="{view>/newEntry/ProductionOrder}" width="200px"/>
                        <Label id="lblInlineOperation" text="{i18n>operation}"/>
                        <HBox id="operationRangeBox" class="sapUiSmallMarginBottom">
                            <Label id="lblInlineOperationFrom" text="{i18n>operationFrom}" labelFor="inpInlineOperationFrom"/>
                            <Input id="inpInlineOperationFrom" value="{view>/newEntry/OperationFrom}" width="90px"/>
                            <Label id="lblInlineOperationTo" text="{i18n>operationTo}" labelFor="inpInlineOperationTo" class="sapUiSmallMarginBegin"/>
                            <Input id="inpInlineOperationTo" value="{view>/newEntry/OperationTo}" width="90px"/>
                        </HBox>
                    <Label id="lblInlineResStorLoc" text="{i18n>reservationStorageLocation}" labelFor="inpInlineResStorLoc"/>
                    <Input id="inpInlineResStorLoc" value="{view>/newEntry/ReservationStorageLocation}" width="200px"/>
                    <Label id="lblInlineLogGroup" text="{i18n>logisticsGroup}" labelFor="inpInlineLogGroup"/>
                    <Input id="inpInlineLogGroup" value="{view>/newEntry/LogisticsGroup}" width="200px"/>
                    <Label id="lblInlineRemark" text="{i18n>remark}" labelFor="inpInlineRemark"/>
                    <Input id="inpInlineRemark" value="{view>/newEntry/Remark}" width="200px"/>
                    <Label id="lblInlineIssueStr" text="{i18n>issuesingstoragelocation}" labelFor="inpInlineRemark"/>
                    <Input id="inpInlineIssueStr" value="{view>/newEntry/IssuesingStorageLocation}" width="200px"/>
                </VBox>
            </Panel>
        </VBox>
    </Page>
</mvc:View>