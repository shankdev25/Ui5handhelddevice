<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.ProductionOrderContinue"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="prodOrderContinuePage" title="Confirm Production Order" showNavButton="true" navButtonPress="onNavBack">
        <VBox id="continueVBox" class="sapUiSmallMargin">
            <HBox id="continueButtons" class="sapUiSmallMarginBottom">
                <Button id="btnDisplayIssue" text="Display Items for Issue" type="Emphasized" press="onDisplayIssueItems"/>
                <Button id="btnClearSelection" text="Clear Selection" class="sapUiSmallMarginBegin" press="onClearSelection"/>
            </HBox>
            <Table id="continueTable" mode="MultiSelect" items="{continue>/items}">
                <columns>
                    <Column id="colLoc"><Text id="txtLoc" text="Location"/></Column>
                    <Column id="colStock"><Text id="txtStock" text="Stock"/></Column>
                    <Column id="colMat"><Text id="txtMat" text="Material"/></Column>
                    <Column id="colMatDesc"><Text id="txtMatDesc" text="Material Description"/></Column>
                    <Column id="colUom"><Text id="txtUom" text="UOM"/></Column>
                </columns>
                <items>
                    <ColumnListItem id="cliContItem">
                        <cells>
                            <Text id="cellLoc" text="{continue>Location}"/>
                            <Text id="cellStock" text="{continue>Stock}"/>
                            <Text id="cellMat" text="{continue>Material}"/>
                            <Text id="cellMatDesc" text="{continue>MaterialDescription}"/>
                            <Text id="cellUom" text="{continue>UOM}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>