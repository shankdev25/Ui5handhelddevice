<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrderItems"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderItemsPage" title="{i18n>addedItemsTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiMediumMargin" style="max-width:1200px; margin:auto;">
                    <Table id="itemsTable" items="{items>/items}" width="100%" fixedLayout="true">
                    <columns>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Material Description"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Item Locator"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="UoM"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Quantity in Stock"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Issuing Storage Location"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Internal Order"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Cost Center"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Material"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Issue Quantity"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Remark"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Actions"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text text="{items>materialDescription}"/>
                            <Text text="{items>itemLocator}"/>
                            <Text text="{items>uom}"/>
                            <Text text="{items>quantityInStock}"/>
                            <Text text="{items>issuingStorageLocation}"/>
                            <Text text="{items>internalOrder}"/>
                            <Text text="{items>costCenter}"/>
                            <Text text="{items>material}"/>
                            <Text text="{items>issueQuantity}"/>
                            <Text text="{items>remark}"/>
                            <HBox>
                                <Button icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                            </HBox>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>