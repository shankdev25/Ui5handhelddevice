<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrderItems"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderItemsPage" title="{i18n>addedItemsTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiMediumMargin" style="max-width:1200px; margin:auto;">
                <Button id="continueButton" text="{i18n>continue}" type="Unstyled" class="doubleHeightButton greenButton" press="onContinue"/>
                <VBox height="16px" />
                <Table id="itemsTable" items="{items>/items}" width="100%" fixedLayout="true" sort="onSort">
                    <columns>
                         <Column minScreenWidth="Phone" demandPopin="false" sortProperty="AUFNR" sortable="true"><Text text="{i18n>internalOrder}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false" sortProperty="LGORT" sortable="true"><Text text="{i18n>storageLocation}"/></Column>
                         <Column minScreenWidth="Phone" demandPopin="false" sortProperty="MATNR" sortable="true"><Text text="{i18n>materialNumber}"/></Column>
                          <Column minScreenWidth="Phone" demandPopin="false" sortProperty="MAKTX" sortable="true"><Text text="{i18n>materialDescription}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false" sortProperty="MEINS" sortable="true"><Text text="{i18n>baseUoM}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false" sortProperty="LABST" sortable="true"><Text text="{i18n>stock}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false" sortProperty="PICKING_QTY" sortable="true"><Text text="{i18n>pickingQty}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Actions"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text text="{= ${items>AUFNR} ? ${items>AUFNR} : ${items>KOSTL} }"/>
                            <Text text="{items>LGORT}"/>
                             <Text text="{items>MATNR}"/>
                            <Text text="{items>MAKTX}"/> 
                            <Text text="{items>MEINS}"/>
                            <Text text="{items>LABST}"/>
                            <Text text="{items>PICKING_QTY}"/>
                            <HBox>
                                <Button icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                            </HBox>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>