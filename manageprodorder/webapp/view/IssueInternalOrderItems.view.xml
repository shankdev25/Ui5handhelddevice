<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrderItems"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderItemsPage" title="{i18n>addedItemsTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox id="_IDGenVBox4" class="sapUiMediumMargin" >
                <!-- Desktop/tablet actions toolbar -->
                <Toolbar id="issueInternalOrderItemsTopToolbar" visible="{= ${device>/isPhone} !== true }" class="topActionToolbar">
                    <ToolbarSpacer id="iioTopSpacer" />
                    <Button id="continueButtonTop" text="{i18n>continue1}" type="Unstyled" class="doubleHeightButton greenButton" press="onContinue"/>
                </Toolbar>
                <VBox id="_IDGenVBox5" height="16px" />
                <!-- Mobile cards (visible on phone) -->
                <VBox id="iioMobileCardsContainer" visible="{= ${device>/isPhone} }">
                    <List id="iioMobileCardList" items="{items>/items}" mode="None" showSeparators="All">
                        <items>
                            <CustomListItem id="iioMobileCardListItem">
                                <VBox id="iioMobileCardVBox" class="sapUiSmallMarginBottom sapUiResponsiveMargin">
                                    <Text id="iioMobileCardOrdOrCC" text="{= ${items>AUFNR} ? ${i18n>internalOrder} + ': ' + ${items>AUFNR} : ${i18n>costCenterLabel} + ': ' + ${items>KOSTL} }"/>
                                    <Text id="iioMobileCardStorLoc" text="{i18n>storageLocation}: {items>LGORT}"/>
                                    <Text id="iioMobileCardMatNr" text="{i18n>materialNumber}: {items>MATNR}"/>
                                    <Text id="iioMobileCardMatDesc" text="{i18n>materialDescription}: {items>MAKTX}"/>
                                    <Text id="iioMobileCardUom" text="{i18n>baseUoM}: {items>MEINS}"/>
                                    <Text id="iioMobileCardStock" text="{i18n>stock}: {items>LABST}"/>
                                    <Text id="iioMobileCardPickQty" text="{i18n>pickingQty}: {items>PICKING_QTY}"/>
                                    <HBox id="iioMobileCardActions" justifyContent="End">
                                        <Button id="iioMobileCardEdit" icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                        <Button id="iioMobileCardDelete" icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                                    </HBox>
                                </VBox>
                            </CustomListItem>
                        </items>
                    </List>
                </VBox>

                <!-- Desktop/tablet table (hidden on phone) -->
                <Table id="itemsTable" items="{items>/items}" width="100%" fixedLayout="true" visible="{= ${device>/isPhone} !== true }">
                    <columns>
                         <Column id="colIioAUFNR" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioAUFNR" text="{i18n>internalOrder}"/></Column>
                        <Column id="colIioLGORT" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioLGORT" text="{i18n>storageLocation}"/></Column>
                         <Column id="colIioMATNR" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioMATNR" text="{i18n>materialNumber}"/></Column>
                          <Column id="colIioMAKTX" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioMAKTX" text="{i18n>materialDescription}"/></Column>
                        <Column id="colIioMEINS" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioMEINS" text="{i18n>baseUoM}"/></Column>
                        <Column id="colIioLABST" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioLABST" text="{i18n>stock}"/></Column>
                        <Column id="colIioPICKING_QTY" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioPICKING_QTY" text="{i18n>pickingQty}"/></Column>
                        <Column id="colIioActions" minScreenWidth="Phone" demandPopin="false"><Text id="txtIioActions" text="  "/></Column>
                    </columns>
                    <items>
                        <ColumnListItem id="iioDesktopRow">
                            <cells>
                                <Text id="iioCellAUFNR" text="{= ${items>AUFNR} ? ${items>AUFNR} : ${items>KOSTL} }"/>
                                <Text id="iioCellLGORT" text="{items>LGORT}"/>
                                <Text id="iioCellMATNR" text="{items>MATNR}"/>
                                <Text id="iioCellMAKTX" text="{items>MAKTX}"/> 
                                <Text id="iioCellMEINS" text="{items>MEINS}"/>
                                <Text id="iioCellLABST" text="{items>LABST}"/>
                                <Text id="iioCellPICKING_QTY" text="{items>PICKING_QTY}"/>
                                <HBox id="iioCellActions">
                                    <Button id="iioBtnEdit" icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                    <Button id="iioBtnDelete" icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <footer>
            <Bar id="issueInternalOrderItemsFooterBar" visible="{= ${device>/isPhone} }">
                <contentMiddle>
                    <Button id="continueButton" text="{i18n>continue1}" type="Unstyled" class="doubleHeightButton greenButton" press="onContinue"/>
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>