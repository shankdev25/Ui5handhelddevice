<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrderItems"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderItemsPage" title="{i18n>addedItemsTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiMediumMargin" style="max-width:1200px; margin:auto;">
                <Button id="continueButton" text="{i18n>continue}" type="Accept" press="onContinue"/>
                <VBox height="16px" />
                <Table id="itemsTable" items="{items>/items}" width="100%" fixedLayout="true">
                    <columns>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>plant}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>materialNumber}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>baseUoM}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>storageBin}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>stock}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>materialDescription}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>documentText}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>pickingQty}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>storageLocation}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>internalOrder}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="{i18n>costCenter}"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Actions"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text text="{items>WERKS}"/>
                            <Text text="{items>MATNR}"/>
                            <Text text="{items>MEINS}"/>
                            <Text text="{items>LGPBE}"/>
                            <Text text="{items>LABST}"/>
                            <Text text="{items>MAKTX}"/>
                            <Text text="{items>BKTXT}"/>
                            <Text text="{items>PICKING_QTY}"/>
                            <Text text="{items>LGORT}"/>
                            <Text text="{items>AUFNR}"/>
                            <Text text="{items>KOSTL}"/>
                            <HBox>
                                <Button icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                            </HBox>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>