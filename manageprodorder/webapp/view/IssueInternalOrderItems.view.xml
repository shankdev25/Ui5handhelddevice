<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrderItems"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderItemsPage" title="{i18n>addedItemsTitle}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiMediumMargin" style="max-width:1200px; margin:auto;">
                    <Table id="itemsTable" items="{items>/items}" width="100%" fixedLayout="true">
                    <columns>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="WERKS"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="MATNR"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="MEINS"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="LGPBE"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="LABST"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="MAKTX"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="BKTXT"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="SPRAS"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="PICKING_QTY"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="materialDescription"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="itemLocator"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="uom"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="quantityInStock"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="LGORT"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="AUFNR"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="KOSTL"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="issuingStorageLocation"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="material"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="issueQuantity"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="remark"/></Column>
                        <Column minScreenWidth="Phone" demandPopin="false"><Text text="Actions"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text text="{items>WERKS}"/>
                            <Text text="{items>MATNR}"/>
                            <Text text="{items>MEINS}"/>
                            <Text text="{items>LGPBE}"/>
                            <Text text="{items>LABST}"/>
                            <Text text="{items>MAKTX}"/>
                            <Text text="{items>BKTXT}"/>
                            <Text text="{items>SPRAS}"/>
                            <Text text="{items>PICKING_QTY}"/>
                            <Text text="{items>LGORT}"/>
                            <Text text="{items>AUFNR}"/>
                            <Text text="{items>KOSTL}"/>
                            <HBox>
                                <Button icon="sap-icon://edit" type="Transparent" press="onEditItem" tooltip="Edit"/>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeleteItem" tooltip="Delete"/>
                            </HBox>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>