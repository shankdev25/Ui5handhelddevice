<mvc:View controllerName="com.merkavim.ewm.manageprodorder.controller.IssueInternalOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="issueInternalOrderPage" showHeader="true">
        <content>
            <VBox class="sapUiMediumMargin" width="100%">
                <HBox>
                    <Button text="{i18n>clearButton}" press="onClearFields" type="Default">
                        <layoutData>
                            <FlexItemData styleClass="sapUiTinyMarginEnd" />
                        </layoutData>
                    </Button>
                    <Button text="{i18n>saveButton}" press="onSave" type="Default">
                        <layoutData>
                            <FlexItemData styleClass="sapUiTinyMarginEnd" />
                        </layoutData>
                    </Button>
                    <Button text="{i18n>addButton}" press="onAdd" type="Default">
                        <layoutData>
                            <FlexItemData styleClass="sapUiTinyMarginEnd" />
                        </layoutData>
                    </Button>
                    <Button text="{i18n>continueButton}" press="onContinue" type="Accept"/>
                </HBox>
                <Panel headerText="Order Details" expandable="false" class="sapUiResponsiveMargin">
                    <VBox>
                        <Label text="{i18n>issuingStorageLocationLabel}" labelFor="issuingStorageLocationInput"/>
                        <Input id="issuingStorageLocationInput" placeholder="{i18n>issuingStorageLocationPlaceholder}" width="200px"/>

                        <Label text="{i18n>internalOrderLabel}" labelFor="internalOrderInput"/>
                        <Input id="internalOrderInput" placeholder="{i18n>internalOrderPlaceholder}" width="200px"/>

                        <Label text="{i18n>costCenterLabel}" labelFor="costCenterInput"/>
                        <Input id="costCenterInput" placeholder="{i18n>costCenterPlaceholder}" width="200px"/>

                        <Label text="{i18n>itemLabel}" labelFor="itemInput"/>
                        <Input id="itemInput" placeholder="{i18n>itemPlaceholder}" width="200px"/>

                        <Label text="{i18n>issueQuantityLabel}" labelFor="issueQuantityInput"/>
                        <Input id="issueQuantityInput" placeholder="{i18n>issueQuantityPlaceholder}" type="Number" width="200px"/>

                        <Label text="{i18n>noteLabel}" labelFor="noteInput"/>
                        <TextArea id="noteInput" placeholder="{i18n>notePlaceholder}" rows="3" width="200px"/>
                    </VBox>
                </Panel>
                
            </VBox>
        </content>
    </Page>
</mvc:View>