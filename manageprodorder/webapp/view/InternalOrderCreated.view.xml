<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="com.merkavim.ewm.manageprodorder.controller.InternalOrderCreated"
    displayBlock="true">
    <Page title="{i18n>documentCreatedTitle}">
        <content>
            <VBox alignItems="Center" justifyContent="Center">
                <HBox alignItems="Center" justifyContent="Center">
                    <Text text="{i18n>documentCreatedTitle}" design="Bold"/>
                </HBox>
                <HBox alignItems="Center" justifyContent="Center">
                    <Text id="docInfo" text="{i18n>documentNumber}: {internalOrderCreated>/docNumber} {i18n>documentYear}: {internalOrderCreated>/docYear}"/>
                </HBox>
                <Button text="{i18n>goToDigitalSign}" press="onSign" class="doubleHeightButton greenButton"  type="Unstyled"/>
            </VBox>
        </content>
        <headerContent>
            <Button icon="sap-icon://home" press="onNavHome"/>
        </headerContent>
    </Page>
</mvc:View>